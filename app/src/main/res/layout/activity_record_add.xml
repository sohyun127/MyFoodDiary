<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.recipe.RecordAddActivity">

    <TextView
        android:id="@+id/foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="음식명"
       />

    <EditText
        android:id="@+id/et_foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_siginup_rectangle"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodname"
        android:hint="음식명 입력"/>

    <TextView
        android:id="@+id/classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_foodname"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="분류"
        />

    <Button
        android:id="@+id/bt_morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classification"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:clickable="true"
        android:text="아침"/>

    <Button
        android:id="@+id/bt_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bt_morning"
        app:layout_constraintTop_toBottomOf="@id/classification"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="6dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:clickable="true"
        android:text="점심"/>

    <Button
        android:id="@+id/bt_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bt_lunch"
        app:layout_constraintTop_toBottomOf="@id/classification"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="6dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:clickable="true"
        android:text="저녁"/>

    <Button
        android:id="@+id/bt_snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bt_dinner"
        app:layout_constraintTop_toBottomOf="@id/classification"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="6dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:clickable="true"
        android:text="간식"/>

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_morning"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="칼로리"
        />

    <EditText
        android:id="@+id/et_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_siginup_rectangle"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calories"
        android:hint="칼로리 입력"/>

    <TextView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_calories"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="사진"
        />

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/et_siginup_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picture"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="15dp"
        android:minHeight="60dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:clickable="true"
        android:text="기록하기"/>



</androidx.constraintlayout.widget.ConstraintLayout>