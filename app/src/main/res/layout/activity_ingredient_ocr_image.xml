<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_ingredient_ocr_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintBottom_toTopOf="@id/btn_ingredient_ocr_image_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_ingredient_ocr_image_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_radius_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@id/btn_ingredient_ocr_image_complete"
        />

    <Button
        android:id="@+id/btn_ingredient_ocr_image_complete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_radius_8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/btn_ingredient_ocr_image_cancel"
        android:text="완료"
        />

</androidx.constraintlayout.widget.ConstraintLayout>